<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81D5FF"
    android:paddingBottom="50px"
    tools:context=".HomePasien">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="202dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/daftarAppointment"
                    android:layout_width="match_parent"
                    android:layout_height="450px"
                    android:layout_marginTop="25dp"
                    android:background="@android:color/transparent"
                    android:padding="30dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/appointment" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/paprika"
                    android:text="Pendaftaran Appointment"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <ImageButton
                    android:id="@+id/JadwalDokter"
                    android:layout_width="match_parent"
                    android:layout_height="450px"
                    android:layout_marginTop="25dp"
                    android:background="@android:color/transparent"
                    android:padding="30dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/jadwaldokter" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/paprika"
                    android:text="Jadwal Dokter"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <ImageButton
                    android:id="@+id/TotalPembayaran"
                    android:layout_width="match_parent"
                    android:layout_height="450px"
                    android:layout_marginTop="25dp"
                    android:background="@android:color/transparent"
                    android:padding="30dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/pembayaran" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/paprika"
                    android:text="Cek Pembayaran"
                    android:textAlignment="center"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/TrackingObat"
                    android:layout_width="match_parent"
                    android:layout_height="450px"
                    android:background="@android:color/transparent"
                    android:padding="30dp"
                    android:layout_marginTop="25dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/trackingresepobat" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/paprika"
                    android:text="Tracking Resep Obat"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <ImageButton
                    android:id="@+id/AppointmentAnda"
                    android:layout_width="match_parent"
                    android:layout_height="450px"
                    android:layout_marginTop="25dp"
                    android:background="@android:color/transparent"
                    android:padding="30dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/appointmentanda" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/paprika"
                    android:text="Appointment Anda"
                    android:textAlignment="center"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>